{
  "name": "web-components-sdk",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:dev": "webpack --mode=development && npm run copy-index",
    "build:dev:ci": "npm run clean && npm install && npm run build:dev",
    "build:prod": "npm run lint && webpack --mode=production && npm run copy-index",
    "build:prod:ci": "npm run clean && npm install && npm run build:prod",
    "clean": "node rimraf-standalone.js ./dist/** ./node_modules",
    "watch": "webpack --mode=development --watch",
    "start-dev": "webpack serve",
    "start-dev-https": "webpack serve --https",
    "start-prod": "http-server ./dist --port 3501 --gzip --brotli --cors --proxy http://localhost:3501?",
    "start-prod-https": "http-server ./dist --ssl --cert private.pem --key private.key --port 3501 --gzip --brotli --cors --proxy https://localhost:3501?",
    "_comment": "Commands above are those expected to be run by customers/clients",
    "copy-index": "shx cp dist/index.html dist/simpleportal.html && shx cp dist/index.html dist/portal.html && shx cp dist/index.html dist/fullportal.html && shx cp dist/index.html dist/embedded.html",
    "test": "node playwright-message.js && playwright test --project=chromium MediaCo/portal MediaCo/embedded",
    "test:headed": "playwright test --headed --project=chromium MediaCo/portal MediaCo/embedded",
    "test-report": "playwright show-report",
    "lint" : "eslint --color --cache --cache-location node_modules/.cache/eslint/ src",
    "lint:fix": "eslint --fix --color --cache --cache-location node_modules/.cache/eslint/ src"
  },
  "dependencies": {
    "@lion/button": "^0.18.1",
    "@lion/checkbox-group": "^0.21.1",
    "@lion/combobox": "^0.11.1",
    "@lion/core": "^0.24.0",
    "@lion/form-core": "^0.18.3",
    "@lion/input-amount": "^0.18.0",
    "@lion/input-datepicker": "^0.26.1",
    "@lion/input-email": "^0.16.1",
    "@lion/listbox": "^0.14.1",
    "@lion/progress-indicator": "^0.10.1",
    "@lion/radio-group": "^0.21.1",
    "@lion/select": "^0.17.1",
    "@lion/textarea": "^0.16.1",
    "@pega/constellationjs": "SDK-8.7.3",
    "@vaadin/grid": "^23.2.7",
    "@vaadin/router": "^1.7.4",
    "@vaadin/text-field": "^23.2.7",
    "dayjs": "^1.10.4",
    "downloadjs": "^1.4.7",
    "fast-deep-equal": "^3.1.3"
  },
  "devDependencies": {
    "@kooneko/livereload-webpack-plugin": "^1.2.0",
    "@pega/configs": "^0.3.4",
    "@pega/eslint-config": "^0.3.4",
    "@pega/prettier-config": "^0.3.4",
    "@playwright/test": "^1.22.1",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.43.0",
    "babel-eslint": "^10.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "compression-webpack-plugin": "^8.0.0",
    "copy-webpack-plugin": "^7.0.0",
    "css-loader": "^5.0.1",
    "eslint": "^6.8.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.5",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-mdx": "^2.0.5",
    "eslint-plugin-n": "^15.5.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-sonarjs": "^0.16.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.5.1",
    "http-server": "^13.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf-standalone": "^2.6.1-7",
    "sass-loader": "^10.1.1",
    "shx": "^0.3.3",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.14",
    "typescript": "^4.9.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.13.0",
    "webpack-cli": "^4.3.1",
    "webpack-dev-server": "^3.11.2"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "vaadin": {
    "disableUsageStatistics": true
  }
}
