{
  "name": "web-components-sdk",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:dev": "run-p -l lint build-dev-only",
    "build:dev:ci": "npm run clean && npm install && npm run build:dev",
    "build:prod": "run-p -l lint build-prod-only",
    "build:prod:ci": "npm run clean && npm install && npm run build:prod",
    "clean": "node rimraf-standalone.js ./dist/** ./node_modules",
    "watch": "webpack --mode=development --watch",
    "start-dev": "webpack serve",
    "start-dev-https": "webpack serve --server-type https",
    "start-prod": "http-server ./dist --port 3501 --gzip --brotli --cors --proxy http://localhost:3501?",
    "start-prod-https": "http-server ./dist --ssl --cert ./keys/sdk-r.crt --key ./keys/sdk-r.key --port 3501 --gzip --brotli --cors --proxy https://localhost:3501?",
    "_comment": "Commands above are those expected to be run by customers/clients",
    "copy-index": "shx cp dist/index.html dist/simpleportal.html && shx cp dist/index.html dist/portal.html && shx cp dist/index.html dist/fullportal.html && shx cp dist/index.html dist/embedded.html",
    "test": "node playwright-message.js && playwright test --project=chromium MediaCo/portal MediaCo/embedded",
    "test:headed": "playwright test --headed --project=chromium MediaCo/portal MediaCo/embedded",
    "test-report": "playwright show-report",
    "build-dev-only": "webpack --mode=development && npm run copy-index",
    "build-prod-only": "webpack --mode=production && npm run copy-index",
    "lint": "eslint --color --cache --cache-location node_modules/.cache/eslint/ src",
    "lint:fix": "eslint --fix --color --cache --cache-location node_modules/.cache/eslint/ src"
  },
  "dependencies": {
    "@lion/ui": "latest",
    "@pega/auth": "latest",
    "@vaadin/grid": "latest",
    "@vaadin/notification": "latest",
    "@vaadin/router": "latest",
    "@vaadin/text-field": "latest",
    "dayjs": "latest",
    "downloadjs": "latest",
    "fast-deep-equal": "latest"
  },
  "devDependencies": {
    "@kooneko/livereload-webpack-plugin": "latest",
    "@pega/configs": "latest",
    "@pega/constellationjs": "latest",
    "@pega/eslint-config": "latest",
    "@pega/pcore-pconnect-typedefs": "latest",
    "@playwright/test": "latest",
    "@types/debug": "latest",
    "@types/json-schema": "latest",
    "@types/ms": "latest",
    "clean-webpack-plugin": "latest",
    "compression-webpack-plugin": "latest",
    "copy-webpack-plugin": "latest",
    "css-loader": "latest",
    "eslint": "latest",
    "eslint-import-resolver-typescript": "latest",
    "file-loader": "latest",
    "html-webpack-plugin": "latest",
    "http-server": "latest",
    "npm-run-all": "latest",
    "rimraf-standalone": "latest",
    "sass-loader": "latest",
    "shx": "latest",
    "style-loader": "latest",
    "ts-lit-plugin": "latest",
    "ts-loader": "latest",
    "typescript": "~5.5.0",
    "url-loader": "latest",
    "webpack": "latest",
    "webpack-cli": "latest",
    "webpack-dev-server": "latest"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "vaadin": {
    "disableUsageStatistics": true
  }
}
